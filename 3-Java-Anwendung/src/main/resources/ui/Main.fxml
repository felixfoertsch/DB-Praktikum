<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<Stage xmlns:fx="http://javafx.com/fxml/1" height="1000" width="1200"
       xmlns="http://javafx.com/javafx/11.0.1" fx:controller="controller.MainController" onShowing="#viewKlausuren">
    <scene>
        <Scene>
            <BorderPane fx:id="mainBorderPane">
                <top>
                    <MenuBar useSystemMenuBar="false">
                        <Menu text="File">
                            <MenuItem onAction="#importButtonClicked" text="Import"/>
                        </Menu>
                        <Menu text="View">
                            <MenuItem onAction="#viewKlausuren" text="Klausuren"/>
                        </Menu>
                        <Menu text="Help">
                            <MenuItem onAction="#aboutButtonClicked" text="About"/>
                        </Menu>
                    </MenuBar>
                </top>
            </BorderPane>
        </Scene>
    </scene>
</Stage>
