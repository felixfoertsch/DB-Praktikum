<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.stage.Stage?>

<Stage fx:id="mainStage" height="480" width="640" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController" onShowing="#viewKlausuren">
    <scene>
        <Scene>
            <BorderPane fx:id="mainBorderPane">
                <top>
                    <MenuBar fx:id="mainMenuBar" useSystemMenuBar="false" BorderPane.alignment="CENTER">
                        <Menu text="File">
                            <MenuItem onAction="#newKlausurButtonClicked" text="New Klausur" />
                            <SeparatorMenuItem />
                            <MenuItem onAction="#importButtonClicked" text="Import" />
                        </Menu>
                        <Menu text="View">
                            <MenuItem onAction="#viewKlausuren" text="Klausuren" />
                        </Menu>
                        <Menu text="Test">
                            <MenuItem onAction="#testStudiengangInsert" text="Insert Hard Coded Studiengang" />
                            <MenuItem onAction="#testStudiengangGet" text="Get Studiengang Id 1" />
                        </Menu>
                        <Menu text="Help">
                            <MenuItem onAction="#aboutButtonClicked" text="About" />
                        </Menu>
                    </MenuBar>
                </top>
            </BorderPane>
        </Scene>
    </scene>
</Stage>
